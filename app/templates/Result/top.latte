{* Latte template *}

{block content}
<h1 n:block="title">Nejlepší žáci školy</h1>
{ifset $resultas}
	<table class="table table-hover">
		<tr><th>název sportu</th><th>muži</th><th>ženy</th></tr>
		<tr n:foreach="$sports AS $sport">
		<td>{$sport->name}</td>
		<td>{if $resultas[$sport->id][male]}
			{? $result = $resultas[$sport->id][male]}
			<strong>{$result->student->name}: {$result->value}{$sport->unit}</strong><br>
			datum: {$result->round->created|date:'d.m.Y'}
		{/if}
		</td>
		<td>
		{if $resultas[$sport->id][female]}
			{? $result = $resultas[$sport->id][female]}
			<strong>{$result->student->name}: {$result->value}{$sport->unit}</strong><br>
			datum: {$result->round->created|date:'d.m.Y'}
		{/if}
		</td>
		</tr>
	</table>
{/ifset}